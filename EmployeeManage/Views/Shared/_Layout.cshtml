<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManage</title>

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" xintegrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom Site CSS (if you have one, keep it) -->
    <!-- <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> -->
    <!-- Your project specific CSS -->
    <!-- <link rel="stylesheet" href="~/EmployeeManage.styles.css" asp-append-version="true" /> -->

    <style>
        /* Custom CSS for a beautiful UI */
        :root {
            --primary-color: #007bff; /* Bootstrap primary blue */
            --secondary-color: #6c757d; /* Bootstrap secondary grey */
            --light-bg: #f8f9fa; /* Bootstrap light background */
            --dark-bg: #343a40; /* Bootstrap dark background */
            --sidebar-bg: #e9ecef; /* A slightly darker light grey for sidebar */
            --text-color: #333;
            --link-hover-color: #0056b3;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5; /* A very light grey background for the whole page */
            color: var(--text-color);
        }

        /* Header Navbar Styling */
        .navbar {
            background-color: #ffffff !important; /* White background */
            border-bottom: 1px solid #dee2e6; /* Light border */
            box-shadow: 0 2px 4px rgba(0,0,0,.05); /* Subtle shadow */
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 0.3rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: var(--light-bg);
                color: var(--primary-color) !important;
            }

        /* Main Layout Container */
        .container-fluid.main-layout {
            padding-top: 20px; /* Space below navbar */
            padding-bottom: 20px;
        }

        /* Sidebar Styling */
        .sidebar {
            background-color: var(--sidebar-bg); /* Light grey background */
            padding: 20px;
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0,0,0,.08); /* More prominent shadow */
            min-height: calc(100vh - 150px); /* Adjust height to fill viewport, considering header/footer */
            display: flex;
            flex-direction: column;
            gap: 10px; /* Space between sidebar links */
        }

            .sidebar .nav-link {
                color: var(--text-color);
                font-weight: 500;
                padding: 10px 15px;
                border-radius: 5px;
                transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    color: var(--primary-color); /* Icon color */
                }

                .sidebar .nav-link:hover {
                    background-color: var(--primary-color);
                    color: #ffffff !important; /* White text on hover */
                    transform: translateX(5px); /* Slight slide effect on hover */
                }

                    .sidebar .nav-link:hover i {
                        color: #ffffff; /* White icon on hover */
                    }

        /* Main Content Area */
        .main-content {
            background-color: #ffffff; /* White background for content */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,.08); /* Consistent shadow with sidebar */
        }
        /*Costum cards color*/
        .customColorCards{
            border: 1px solid;
            border-color: aquamarine;
            padding:5px;
            height:150px;
            width:45%;
           
        }

        /* Footer Styling */
        .footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            padding: 1rem 0;
            text-align: center;
            margin-top: 20px; /* Space above footer */
            box-shadow: 0 -2px 4px rgba(0,0,0,.03); /* Subtle shadow upwards */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmployeeManage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_loginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid main-layout">
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-lg-2 col-md-3 col-sm-12 mb-3 ">
                <div class="sidebar bg-primary opacity-5 font vh-100">
                    <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="Index">
                        <i class="fas fa-users text-white"></i> Employee Details
                    </a>
                    <!-- You had a duplicate link, keeping one for now. Add more as needed. -->
                    <a class="nav-link text-white" asp-area="" asp-controller="Departments" asp-action="Index">
                        <i class="fas fa-building text-white"></i> Departments
                    </a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Reports" asp-action="Index">
                        <i class="fas fa-chart-line text-white"></i> Reports
                    </a>
                    <!-- Add more sidebar links here with appropriate icons -->
                </div>
            </div>
            <!-- Main Content Column -->
            <div class="col-lg-10 col-md-9 col-sm-12">
                <main role="main" class="main-content">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EmployeeManage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- jQuery (if needed by your site.js or other scripts) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- Your site-specific JavaScript -->
    <!-- <script src="~/js/site.js" asp-append-version="true"></script> -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
